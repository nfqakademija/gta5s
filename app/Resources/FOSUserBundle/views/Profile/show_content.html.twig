
    {% trans_default_domain 'FOSUserBundle' %}

    <div class="dashboard-profile-title">
        <img src="{{ asset(user.getAvatar().generateFileURL()) }}"/>
        <h2 class="dashboard-name">{{  user.getFirstName() }} {{  user.getLastName() }}</h2>
    </div>

    <div class="dashboard-clear">
        <p class="dashboard-bio">Biografija: {{ user.getBio() }}</p>

        {% if user.getCharacter() is not null %}

            <table class="table">
                {% if user.getCharacter().getGender() %}
                    <tr>
                        <td>Lytis:</td>
                        <td>Vyras</td>
                    </tr>
                {% else %}
                    <tr>
                        <td>Lytis:</td>
                        <td>Moteris</td>
                    </tr>
                {% endif %}
                <tr>
                    <td>Pinigai:</td>
                    <td>{{  user.getCharacter().getMoney() }}</td>
                </tr>
                <tr>
                    <td>Patirtis:</td>
                    <td>{{  user.getCharacter().getXp() }}</td>
                </tr>
            </table>

        {% else %}

            <h5>Šis vartotojas dar neturi susikūręs savo paskyros!</h5>

        {% endif %}
    </div>
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12">
                <div class="topai-wrapper">
                    <h1>Top Žaidėjai</h1>
                    <table class="table table-striped table-hover table-condensed">
                        <tr>
                            <th>Žaidėjas</th>
                            <th>Patirtis</th>
                            <th>Pinigai</th>
                        </tr>

                        {% for item in pagination %}
                            <tr>
                                <td><a href="{{ path("profile", {profile_id: 1}) }}">{{ item.firstName }} {{ item.lastName }}</a></td>
                                <td>{{ item.character.xp }}</td>
                                <td>{{ item.character.money }}</td
                            </tr>
                        {% endfor %}
                    </table>
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}